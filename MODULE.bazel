module(
    name = "nlb",
    version = "0.0.0",
)

bazel_dep(name = "bazel_skylib", version = "1.5.0")

bazel_dep(name = "rules_ruby", version = "0.6.0")
# TODO: Wait for 0.6.0 to be published and remove Git override
